<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="<%= url_for '/css/bootstrap.min.css' %>"/>
    <link rel="stylesheet" type="text/css" href="<%= url_for '/css/main.css' %>"/>
    <script type="text/javascript" src="<%= url_for '/js/jquery.min.js' %>"></script>
    <script type="text/javascript" src="<%= url_for '/js/bootstrap.min.js' %>"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <p class="navbar-text pull-left"><i class="icon-music icon-white"></i>
                    "<span class="current_track_title"><%== $current_track->title %></span>"
                    by <a href="<%== url_for "/library/artist/". $current_track->artist %>"><span class="current_track_artist"><%== $current_track->artist %></span></a>
                </p>
                <ul class="nav">
                    <li class="dropdown" id="navmenu">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#navmenu">
                            Navigate
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="<%== url_for '/' %>">Home</a></li>
                            <li><a href="<%== url_for '/library' %>">Library</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-search pull-left">
                    <input type="text" class="search-query" placeholder="Search Library">
                </form>
                <p class="navbar-text pull-right">
                    <a href="<%= url_for '/mpd/do/prev' %>"><i class="icon-step-backward icon-white"></i></a>
                    <a href="<%= url_for '/mpd/do/play' %>"><i class="icon-play icon-white"></i></a>
                    <a href="<%= url_for '/mpd/do/pause' %>"><i class="icon-pause icon-white"></i></a>
                    <a href="<%= url_for '/mpd/do/next' %>"><i class="icon-step-forward icon-white"></i></a>
                    &nbsp;
                    <a href="<%= url_for '/mpd/toggle/random' %>"><i class="icon-random <%== $mpd_status->random ? 'icon-white' : '' %>"></i></a>
                    &nbsp;
                    <a href="<%= url_for '/mpd/volume/down' %>"><i class="icon-volume-down icon-white"></i></a>
                    <a href="<%= url_for '/mpd/volume/up' %>"><i class="icon-volume-up icon-white"></i></a>
                    <span class="small"><%== $mpd_status->volume %>%</span>
                </p>
            </div>
        </div>
    </div>
    <div id="content" class="container">
        <h1><%= title %></h1>
        <%= content %>
    </div>

    <!-- Flashes -->
    <div class="row">
        <div class="span4">&nbsp;</div>
% my $message = flash 'message';
% if ( defined $message ) {
    <div class="row">
    <div id='flash' class="span4 alert alert-success">
        <a class="close" data-dismiss="alert">x</a>
        <%== $message %>
    </div>
    </div>
% }
% my $error = flash 'error';
% if ( defined $error ) {
    <div id='flash' class="span4 alert alert-error">
        <a class="close" data-dismiss="alert">x</a>
        <%== $error %>
    </div>
    </div>
% }

</body>
</html>
